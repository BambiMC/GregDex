{
  "buildCommand": "npm run build-with-data",
  "installCommand": "npm install",
  "framework": "nextjs",
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=2048"
    }
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30,
      "includeFiles": "data/**"
    }
  }
}
